generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id                String    @id @default(uuid())
  title             String
  createdBy         User      @relation("StoryCreator", fields: [createdById], references: [id])
  createdById       String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  completed         Boolean   @default(false)
  completedAt       DateTime?
  contributors      User[]    @relation("StoryContributors")
  content           Segment[]
  nextContributorId String
  rounds            Int       @default(3)
  completedRounds   Int       @default(0)
}

model Segment {
  id        String        @id @default(uuid())
  author    User          @relation("SegmentAuthor", fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  story     Story         @relation(fields: [storyId], references: [id], onDelete: Cascade)
  storyId   String
  content   String
  promptText String?
  likedBy   SegmentLike[]
  reveal    String?

  @@index([authorId])
  @@index([storyId])
}

model SegmentLike {
  id        String   @id @default(uuid())
  segment   Segment  @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  segmentId String
  user      User     @relation("SegmentLikes", fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([segmentId, userId])
  @@index([userId])
}

model User {
  id               String        @id @default(uuid())
  name             String
  nameFirst        String?
  nameLast         String?
  email            String        @unique
  phone            String?
  authoredSegments Segment[]     @relation("SegmentAuthor")
  likedSegments    SegmentLike[] @relation("SegmentLikes")
  stories          Story[]       @relation("StoryContributors")
  createdStories   Story[]       @relation("StoryCreator")
  loggedOn         Boolean       @default(false)
  emailVerified    Boolean       @default(false)
  image            String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @default(now()) @updatedAt
  sessions         Session[]
  accounts         Account[]

  userName String?

  @@unique([userName])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
